{% extends 'base.html.twig' %}

{% block title %}Product List{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .product-list {
            width: 80%;
            margin: 20px auto;
            border-collapse: collapse;
        }
        .product-list th, .product-list td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }
        .product-list th {
            background-color: #f2f2f2;
        }
        .product-list img {
            max-width: 100px;
            height: auto;
        }
    </style>
{% endblock %}

{% block body %}
    <h1>Product List</h1>

    <table class="product-list">
        <thead>
            <tr>
                <th>ID</th>
                <th>Designation</th>
                <th>Univers</th>
                <th>Price</th>
                <th>Image</th>
            </tr>
        </thead>
        <tbody>
            {% for product in products %}
                <tr>
                    <td>{{ product.id }}</td>
                    <td>{{ product.designation }}</td>
                    <td>{{ product.univers }}</td>
                    <td>{{ product.price }}</td>
                    <td>
                        {% if product.imageName %}
                            <img src="{{ vich_uploader_asset(product, 'imageFile') }}" alt="{{ product.designation }}">
                        {% else %}
                            No image
                        {% endif %}
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
